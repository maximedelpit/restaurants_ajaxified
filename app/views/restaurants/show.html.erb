<h1><%= @restaurant.name %></h1>
<%= image_tag "https://maps.googleapis.com/maps/api/staticmap?zoom=12&size=400x300&sensor=false&maptype=roadmap&markers=color:blue|#{@restaurant.address}" %>
<div id="review_count">
  <%= render 'review_count', reviews: @restaurant.reviews %>
</div>


<div id="reviews">
  <% if @restaurant.reviews.blank? %>
    Be the first to leave a review for <%= @restaurant.name %>
  <% else %>
    <% @restaurant.reviews.each do |review| %>
      <%= render 'reviews/show', review: review %>
    <% end %>
  <% end %>
</div>

<%= render 'reviews/form', restaurant: @restaurant, review: @review %>
